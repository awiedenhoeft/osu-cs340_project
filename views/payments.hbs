<div id="browse">
<p><a href="#" onClick="showAll()">Display all forms</a> </p>
<table border="1" cellpadding="5">
   <tr>
        {{#each data.[0]}}
        <th>
            {{@key}}
        </th>
        {{/each}}
        <th>delete</th>
    </tr>
    
  {{#each data}}
  <tr>
    
    <td>{{this.invoiceID}}</td>
    <td>{{this.clientID}}</td>
    <td>{{this.invoiceDate}}</td>
    <td>{{this.totalAmount}}</td>
    <td>{{this.paymentDate}}</td>
    <td><button onclick="deletePayment({{this.invoiceID}}">Delete</button></td>
  </tr>
  {{/each}}
</table>
<script src="./js/delete_payment.js"></script>
