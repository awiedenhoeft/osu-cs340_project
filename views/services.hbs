<body onload="browseServices()">
<h1>Services</h1>

[ <a href="/">Index</a> | <a href="clients.hbs">Clients</a> | <a href="weddings.hbs">Weddings</a> | <a href="services.hbs"> Services</a> | <a href="payments.hbs"> Payments</a> | <a href="/weddingServices.hbs">Wedding Services</a> ]

<div id="browse">
<p><a href="#" onClick="showAll()">Display all forms</a></p>

<!-- Display Table -->
<table border="1" cellpadding="5">
    <tr>
        <th>Service ID</th>
        <th>Service Name</th>
        <th>Service Type</th>
        <th>($) Service Cost</th>
        <th>Delete</th>
    </tr>
    {{#each data}}
    <tr>
        <td>{{this.serviceID}}</td>
        <td>{{this.serviceName}}</td>
        <td>{{this.serviceType}}</td>
        <td>{{this.serviceCost}}</td>

        <!-- Delete Service Form -->
        <td>
            <form action="/delete-service" method="POST" >
                <input type="hidden" name="serviceID" value="{{this.serviceID}}">
                <button type="submit">Delete</button>
            </form>
        </td>
    </tr>
    {{/each}}
</table>
<p>&nbsp;</p>

<!-- Add Service Form -->
<h2>Add Service</h2>
<p>To add a wedding service, please enter the information below and click 'Add Service'!</p>
<form id="add-service-form" method="POST" action="/add-service">
    <fieldset>
        <label for="input-serviceName">Service Name:</label>
        <input type="text" name="input-serviceName" id="input-serviceName" required><br>

        <label for="input-serviceType">Service Type:</label>
        <select name="input-serviceType" id="input-serviceType" required>
             <option value="test"> </option>
            <option value="">Select Service Type</option>
            <option value="Photography">Photography</option>
            <option value="Food">Food</option>
            <option value="Decor">Decor</option>
            <option value="Music">Music</option>
        </select><br>

        <label for="input-serviceCost">Service Cost ($):</label>
        <input min="0" type="number" name="input-serviceCost" id="input-serviceCost" required><br>

    </fieldset>
     <input type="submit" value="Add Service">

</form>

<p>&nbsp;</p>

<!-- update--> 
<h2>Update Service Information</h2>
<p>To update a service's information, please use the form below.</p>
<form id="update-service-form" method="POST" action="/update-service">
    <fieldset>
        <label for="update-serviceID">Select ID:</label>
        <select name="update-serviceID" id="update-serviceID" required>
            <option value="test"> </option>
            {{#each data}}
            <option value="{{this.serviceID}}">{{this.serviceID}}</option>
            {{/each}}
        </select><br>

        <label for="update-serviceName">Service Name:</label>
        <input type="text" name="update-serviceName" id="update-serviceName" required><br>

        <label for="update-serviceType">Service Type:</label>
        <select name="update-serviceType" id="update-serviceType" required>
             <option value="test"> </option>
            <option value="Photography">Photography</option>
            <option value="Food">Food</option>
            <option value="Decor">Decor</option>
            <option value="Music">Music</option>
        </select><br>

        <label for="update-serviceCost">Service Cost ($):</label>
        <input min="0" type="number" name="update-serviceCost" id="update-serviceCost" required><br>
    </fieldset>
        <input type="submit" value="Update Service">
        <input type="button" value="Cancel" onclick="browseServices()">
</form>

<p>&nbsp;</p>
<!-- delete --> 
<h2>Delete Service</h2>
<p>To delete a service, select the corresponding service ID from the drop-down menu.</p>
<form id="delete-service-form" method="POST" action="/delete-service">
    <fieldset>
        <label for="serviceID">Select ID of Service to Delete:</label>
        <select name="serviceID" id="serviceID" required>
            <option value="test"> </option>
            {{#each data}}
            <option value="{{this.serviceID}}">{{this.serviceID}}</option>
            {{/each}}
        </select><br>

    </fieldset>
        <input type="submit" value="Delete Service">
        <input type="button" value="Cancel" onclick="browseServices()">
</form>

</div>
